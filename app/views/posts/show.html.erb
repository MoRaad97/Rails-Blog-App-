<h1>Post details Page</h1>

<div>
<p><%= @post.user.name%></p>
<p><%= @post.title%></p>
<p><%= @post.text%></p>
<p>number on comments:<%= @post.comment_counter || 0%></p>
<p>number on likes:<%= @post.likes_counter || 0%></p>
</div>
<div>
<ul>
<% @comments.each do |comment| %>
<li><span><%= comment.user.name%></span>: <%= comment.text %></li>
<% end %>

<li>
<%= form_with scope: :like, url: user_post_likes_path(@user,@post), local: true do |f|  %>
  <p>
  <%= f.submit "Like" %>
  </p>
  <% end %>
</li>

</ul>
</div>
